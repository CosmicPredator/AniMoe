                    <Grid
                        x:Name="TextActivityCard"
                        Grid.Row="1"
                        VerticalAlignment="Top"
                        Style="{StaticResource CardGridStyle}">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid>
                            <StackPanel
                                Margin="10"
                                Orientation="Horizontal"
                                Spacing="10">
                                <controls:ImageEx
                                    Width="40"
                                    Height="40"
                                    CornerRadius="100"
                                    Source="ms-appx:///Assets/profile.jpg" />
                                <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                                    <TextBlock VerticalAlignment="Center" Text="TestAccountForAnimoe" />
                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                        <TextBlock Foreground="{ThemeResource TextFillColorTertiaryBrush}" Text="Replying to" />
                                        <HyperlinkButton Padding="0" Content="CosmicPredator" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                            <TextBlock
                                Margin="0,5,10,0"
                                HorizontalAlignment="Right"
                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                Text="52 minutes ago" />
                        </Grid>

                        <Grid
                            Grid.Row="1"
                            Height="200"
                            Margin="10"
                            CornerRadius="8">
                            <WebView2 x:Name="AcitivityWebView" DefaultBackgroundColor="Transparent">
                                <WebView2.Resources>
                                    <SolidColorBrush x:Name="BrushForThemeBackgroundColor" Color="Transparent" />
                                    <SolidColorBrush x:Name="BrushForThemeBackgroundColor_HC" Color="Transparent" />
                                </WebView2.Resources>
                            </WebView2>
                        </Grid>

                        <Grid Grid.Row="2" Margin="10,5,10,10">
                            <StackPanel
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal"
                                Spacing="20">
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="55" />
                                    <FontIcon Glyph="&#xEB51;" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="2" />
                                    <FontIcon Glyph="&#xE8F2;" />
                                </StackPanel>
                            </StackPanel>
                            <StackPanel
                                Margin="0,0,10,0"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal"
                                Spacing="20">
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <FontIcon Glyph="&#xEA8F;" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <FontIcon Glyph="&#xE71B;" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                    </Grid>
                </Grid>
            </ScrollViewer>

        </Grid>

    </Grid>

</Page>
